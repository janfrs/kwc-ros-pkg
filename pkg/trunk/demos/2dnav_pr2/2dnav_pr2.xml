<launch>
  <group name="wg">
    <node pkg="hokuyo_node" type="hokuyo_node" name="base_hokuyo_node" output="screen" args="scan:=base_scan">
      <remap from="hokuyuo_node" to="base_hokuyo_node" />
      <param name="port" type="string" value="/dev/ttyACM0" />
      <param name="frameid" type="string" value="base_laser" />
      <param name="min_ang" type="double" value="-80.0" />
      <param name="max_ang" type="double" value="80.0" />
    </node>
    <node pkg="map_server" type="map_server" args="$(find 2dnav-stage)/willow-full-0.05.pgm 0.05" respawn="false" />
    <node pkg="amcl_player" type="amcl_player" respawn="false" output="screen" args="scan:=base_scan"/>

    <include file="$(find highlevel_controllers)/test/launch_world_3d_map.xml"/>

  </group>
</launch>
