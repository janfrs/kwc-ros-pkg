<launch>
  <group name="wg">
    <machine name="base_laser_machine" address="prg2" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" ros-ip="prg2" />
    <machine name="tilt_laser_machine" address="prg3" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" ros-ip="prg3" default="true" />
    <node pkg="hokuyo_node" type="hokuyo_node" name="base_hokuyo_node" args="scan:=base_scan" machine="base_laser_machine">
      <param name="port" type="string" value="/dev/ttyACM0" />
      <param name="frameid" type="string" value="base_laser" />
      <param name="min_ang" type="double" value="-100.0" />
      <param name="max_ang" type="double" value="100.0" />
    </node>
    <node pkg="hokuyo_node" type="hokuyo_node" name="tilt_hokuyo_node" args="scan:=tilt_scan" machine="tilt_laser_machine">
      <param name="port" type="string" value="/dev/ttyACM0" />
      <param name="frameid" type="string" value="tilt_laser" />
      <param name="min_ang" type="double" value="-80.0" />
      <param name="max_ang" type="double" value="80.0" />
    </node>
    <node pkg="map_server" type="map_server" args="$(find 2dnav_stage)/willow-full-0.05.pgm 0.05" respawn="false" />
    <param name="laser_x_offset" type="double" value=".275" />
    <param name="pf_laser_max_beams" value="20"/>
    <param name="pf_min_samples" value="500"/>
    <param name="pf_max_samples" value="10000"/>
    <param name="pf_odom_drift_xx" value="0.5"/>
    <param name="pf_odom_drift_yy" value="0.2"/>
    <param name="pf_odom_drift_aa" value="0.2"/>
    <param name="pf_odom_drift_xa" value="0.2"/>
    <param name="pf_min_d" value="0.25"/>
    <param name="pf_min_a" value="0.524"/>
    <node pkg="amcl_player" type="amcl_player" name="amcl_player" respawn="false" args="scan:=base_scan" />
    <include file="$(find highlevel_controllers)/test/launch_world_3d_map.xml"/>
    <include file="$(find highlevel_controllers)/test/launch_move_base.xml" />
  </group>
</launch>
