<?xml version="1.0"?>

<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

  <macro name="pr2_tilting_laser" params="name parent *origin">

    <joint name="${name}_mount_joint" type="revolute">
      <axis xyz="0 1 0" />
      <anchor xyz="0 0 0" />
      <limit min="-0.785" max="1.48" effort="0.5292" velocity="1256.0" />
      <calibration reference_position="-0.35" values="0 0" />
    </joint>

    <link name="${name}_mount"> 
      <parent name="${parent}" />
      <insert_block name="origin" />
      <joint name="${name}_mount_joint" /> 
      <inertial>
        <mass value="1.0" />
        <com xyz="0 0 0" />
        <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
      </inertial> 
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/PioneerBody</elem>
        </map>
        <geometry name="pr2_${name}_mount_mesh_file">
          <mesh filename="hok_tilt" />
        </geometry>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry name="${name}_mount_collision_geom" >
          <box size=".001 .001 .001" /> 
        </geometry>
      </collision>
    </link>

    <transmission type="SimpleTransmission" name="${name}_mount_trans">
      <actuator name="${name}_motor" />
      <joint name="${name}_mount_joint" />
      <mechanicalReduction>6.0</mechanicalReduction>
    </transmission>

    <joint name="${name}_joint" type="fixed">
      <axis xyz="0 1 0" />
      <anchor xyz="0 0 0" />
    </joint>

    <sensor name="${name}" type="laser">
      <parent name="${name}_mount" />
      <origin xyz="0 0 0.03" rpy="0 0 0" />      
      <joint name="${name}_joint" /> 
      <inertial>
        <mass value="0.1" />
        <com xyz="0 0 0" />
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
      </inertial> 
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry name="pr2_${name}_visual_geom">
          <mesh scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry name="${name}_collision_geom" >
          <box size=".001 .001 .001" /> 
        </geometry>
      </collision>
      
      <map name="sensor" flag="gazebo">
        <verbatim key="sensor_ray">
          <sensor:ray name="${name}">
            <rayCount>683</rayCount>
            <rangeCount>683</rangeCount>
            <laserCount>1</laserCount>
            
            <origin>0.0 0.0 0.0</origin>
            <displayRays>false</displayRays>
            
            <minAngle>-45</minAngle>
            <maxAngle> 45</maxAngle>
            
            <minRange>0.05</minRange>
            <maxRange>10.0</maxRange>
            <updateRate>10.0</updateRate>
            <controller:ros_laser name="ros_${name}_controller" plugin="libRos_Laser.so">
              <gaussianNoise>0.005</gaussianNoise>
              <alwaysOn>true</alwaysOn>
              <updateRate>15.0</updateRate>
              <!-- <topicName>tilt_scan</topicName> -->
              <topicName>scan</topicName>
              <frameName>tilt_laser</frameName>
              <interface:laser name="ros_${name}_iface" />
            </controller:ros_laser>
          </sensor:ray>
        </verbatim>
      </map>

    </sensor>

  </macro>

  <macro name="pr2_head_pan" params="name parent *origin">

    <joint name="${name}_joint" type="revolute">
      <axis xyz="0 0 1" /> 
      <limit min="-2.932" max="2.932"
             effort="0.529" velocity="1256.64" />
      <calibrate reference_position="-2.862" />
    </joint>

    <transmission type="SimpleTransmission" name="${name}_trans">
      <actuator name="${name}_motor" />
      <joint name="${name}_joint" />
      <mechanicalReduction>6.0</mechanicalReduction>
    </transmission>

    <link name="${name}">
      <parent name="${parent}" />
      <insert_block name="origin" />
      <joint name="${name}_joint" />

      <inertial>
        <mass value="1.611118" />
        <com xyz=" -0.005717  0.010312 -0.029649 " />
        <inertia ixx="0.00482611007"  ixy="-0.000144683999"  ixz="0.000110076136"  iyy="0.005218991412"  iyz="-0.000314239509"  izz="0.008618784925" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0.0" rpy="0 0 0 " />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Blue</elem>
        </map>
        <geometry name="pr2_${name}_mesh_file">
          <mesh filename="${name}" />
        </geometry>
      </visual> 
      
      <collision>
        <origin xyz=" 0 0 0" rpy="0.0 0.0 0.0 " />
        <geometry name="${name}_collision_geom">
          <box size="0.188 0.219 0.137" />
        </geometry>
      </collision> 
      
    </link>
  </macro>

  <macro name="pr2_head_tilt" params="name parent *origin">

    <joint name="${name}_joint" type="revolute">
      <axis xyz="0 1 0" /> 
      <limit min="-0.55" max="1.047"
             effort="0.529" velocity="1256.64" />
      <calibrate reference_position="-0.195" />
    </joint>

    <transmission type="SimpleTransmission" name="${name}_trans">
      <actuator name="${name}_motor" />
      <joint name="${name}_joint" />
      <mechanicalReduction>6.0</mechanicalReduction>
    </transmission>

    <link name="${name}">
      <parent name="${parent}" />
      <insert_block name="origin" />
      <joint name="${name}_joint" />

      <inertial>
        <mass value="1.749727" />
        <com xyz="0.041935 0.003569 0.028143" />
        <inertia ixx="0.010602303435"  ixy="-0.000408814235"  ixz="0.00198303894"  iyy="0.011874383747"  iyz="0.000197908779"  izz="0.005516790626" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0 " />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Green</elem> 
        </map>
        <geometry name="pr2_${name}_mesh_file">
          <mesh filename="${name}" />
        </geometry>
      </visual> 
      
      <collision>
        <origin xyz="0 0 0 " rpy="0 0 0" /> 
        <geometry name="${name}_collision_geom">
          <box size="0.164 0.253 0.181" />
        </geometry>
      </collision> 
    </link>
  </macro>

  
  <macro name="pr2_head" params="name parent *origin">
    <pr2_head_pan name="${name}_pan" parent="${parent}">
      <insert_block name="origin" />
    </pr2_head_pan>
    
    <pr2_head_tilt name="${name}_tilt" parent="${name}_pan">
      <origin xyz="0.058 0 0" rpy="0 0 0" />
    </pr2_head_tilt>
  </macro>

</robot>
