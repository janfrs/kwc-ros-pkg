<?xml version="1.0"?>
<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

  <property name="M_PI" value="3.1415926535897931" />
  <property name="VELOCITY_LIMIT_SCALE" value="0.6" />

  <property name="shoulder_pitch_length" value="0.10" />
  <property name="shoulder_pitch_radius" value="0.12" />
  <property name="gripper_max_angle" value="0.8" />


  <macro name="pr2_finger" params="prefix parent">

    <!-- Finger proximal digit -->

    <joint name="${prefix}_l_finger_joint" type="revolute">
      <axis xyz="0 0 1" />
      <anchor xyz="0 0 0" />
      <limit effort="100" min="0" max="${gripper_max_angle}" />
      <calibration reference_position="0" values="0 0" />
      <joint_properties damping="0.1" />
    </joint>

    <link name="${prefix}_l_finger">
      <parent name="${parent}" />
      <origin xyz="0.07751 ${1*0.01} 0" rpy="0 0 0" />

      <joint name="${prefix}_l_finger_joint" />
      <inertial>
        <mass value="0.1" />
        <com xyz="0 0 0" />
        <inertia  ixx="0.012430552544" ixy="-0.000003671102" ixz="0.000029379389"
                  iyy="0.013567548848" iyz="-0.000427679042"
                  izz="0.001755089866" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Shell</elem>
        </map>
        <geometry name="pr2_finger_l_mesh_file">
          <mesh filename="upper_finger_l" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry name="pr2_finger_l_collision_geom">
          <box size="0.131 0.056 0.049" />
        </geometry>
        <verbose value="Yes" />
      </collision>
      <map name="${prefix}_l_finger_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <!-- Finger proximal digit -->

    <joint name="${prefix}_r_finger_joint" type="revolute">
      <axis xyz="0 0 1" />
      <anchor xyz="0 0 0" />
      <limit effort="100" min="${-gripper_max_angle}" max="0" />
      <calibration reference_position="0" values="0 0" />
      <joint_properties damping="0.1" />
      <mimic name="${prefix}_l_finger_joint" mult="${-1}" offset="0"/>
      <map name="${prefix}_r_finger_mimic" flag="gazebo">
        <elem key="mimicKp">1000.0</elem>
        <elem key="mimicKd"> 0.0</elem>
        <elem key="mimicFMax">10000.0</elem>
      </map>
    </joint>

    <link name="${prefix}_r_finger">
      <parent name="${parent}" />
      <origin xyz="0.07751 ${-1*0.01} 0" rpy="0 0 0" />

      <joint name="${prefix}_r_finger_joint" />
      <inertial>
        <mass value="0.1" />
        <com xyz="0 0 0" />
        <inertia  ixx="0.012430552544" ixy="-0.000003671102" ixz="0.000029379389"
                  iyy="0.013567548848" iyz="-0.000427679042"
                  izz="0.001755089866" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Shell</elem>
        </map>
        <geometry name="pr2_finger_r_mesh_file">
          <mesh filename="upper_finger_r" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry name="pr2_finger_r_collision_geom">
          <box size="0.131 0.056 0.049" />
        </geometry>
        <verbose value="Yes" />
      </collision>
      <map name="${prefix}_r_finger_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <!-- Finger tip -->

    <joint name="${prefix}_l_finger_tip_joint" type="revolute">
      <axis xyz="0 0 1" />
      <anchor xyz="0 0 0" />
      <limit effort="100" min="${-gripper_max_angle}" max="0" />
      <calibration reference_position="0" values="0 0" />
      <safety_limit_min spring_constant="10.0" safety_length="0.1" damping_constant="0.1"/>
      <safety_limit_max spring_constant="10.0" safety_length="0.1" damping_constant="0.1"/>
      <joint_properties damping="0.1" />
      <mimic name="${prefix}_l_finger_joint" mult="-1" offset="0"/>
      <map name="${prefix}_l_finger_tip_mimic" flag="gazebo">
        <elem key="mimicKp">1000.0</elem>
        <elem key="mimicKd"> 0.0</elem>
        <elem key="mimicFMax">10000.0</elem>
      </map>
    </joint>

    <link name="${prefix}_l_finger_tip">
      <parent name="${prefix}_l_finger" />
      <origin xyz="0.0915 0 0" rpy=" 0 0 0 " />

      <joint name="${prefix}_l_finger_tip_joint" />
      <inertial>
        <mass value="0.1" />
        <com xyz=" 0 0 0 " />
        <inertia  ixx="0.012430552544" ixy="-0.000003671102" ixz="0.000029379389"
                  iyy="0.013567548848" iyz="-0.000427679042"
                  izz="0.001755089866" />
      </inertial>
      <visual>
        <origin xyz="0 0 0 " rpy="0 0 0 " />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Green</elem>
        </map>
        <geometry name="pr2_finger_tip_l_mesh_file">
          <mesh filename="finger_tip_l" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0 " rpy="0 0 0" />
        <geometry name="pr2_finger_tip_l_collision_geom">
          <box size="0.053 0.04 0.023" />
        </geometry>
        <verbose value="Yes" />
      </collision>
      <map name="${prefix}_l_finger_tip_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <!-- Finger tip -->

    <joint name="${prefix}_r_finger_tip_joint" type="revolute">
      <axis xyz="0 0 1" />
      <anchor xyz="0 0 0" />
      <limit effort="100" min="0" max="${gripper_max_angle}" />
      <calibration reference_position="0" values="0 0" />
      <safety_limit_min spring_constant="10.0" safety_length="0.1" damping_constant="0.1"/>
      <safety_limit_max spring_constant="10.0" safety_length="0.1" damping_constant="0.1"/>
      <joint_properties damping="0.1" />
      <mimic name="${prefix}_l_finger_joint" mult="1" offset="0"/>
      <map name="${prefix}_r_finger_tip_mimic" flag="gazebo">
        <elem key="mimicKp">1000.0</elem>
        <elem key="mimicKd"> 0.0</elem>
        <elem key="mimicFMax">10000.0</elem>
      </map>
    </joint>

    <link name="${prefix}_r_finger_tip">
      <parent name="${prefix}_r_finger" />
      <origin xyz="0.0915 0 0" rpy=" 0 0 0 " />

      <joint name="${prefix}_r_finger_tip_joint" />
      <inertial>
        <mass value="0.1" />
        <com xyz=" 0 0 0 " />
        <inertia  ixx="0.012430552544" ixy="-0.000003671102" ixz="0.000029379389"
                  iyy="0.013567548848" iyz="-0.000427679042"
                  izz="0.001755089866" />
      </inertial>
      <visual>
        <origin xyz="0 0 0 " rpy="0 0 0 " />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Green</elem>
        </map>
        <geometry name="pr2_finger_tip_r_mesh_file">
          <mesh filename="finger_tip_r" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0 " rpy="0 0 0" />
        <geometry name="pr2_finger_tip_r_collision_geom">
          <box size="0.053 0.04 0.023" />
        </geometry>
        <verbose value="Yes" />
      </collision>
      <map name="${prefix}_r_finger_tip_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_${prefix}_l_finger">
        <!--
        <controller:P3D name="p3d_${prefix}_l_finger_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_l_finger</bodyName>
          <topicName>${prefix}_l_finger_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${prefix}_l_finger_position_iface" />
        </controller:P3D>
        -->
      </verbatim>
    </map>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_${prefix}_l_finger_tip">
        <!--
        <controller:P3D name="p3d_${prefix}_l_finger_tip_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_l_finger_tip</bodyName>
          <topicName>${prefix}_l_finger_tip_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${prefix}_l_finger_tip_position_iface" />
        </controller:P3D>
        <controller:F3D name="f3d_${prefix}_l_finger_tip_controller" plugin="libF3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_l_finger_tip</bodyName>
          <topicName>${prefix}_l_finger_tip_force_ground_truth</topicName>
          <frameName>map</frameName>
          <interface:position name="f3d_${prefix}_l_finger_tip_position_iface" />
        </controller:P3D>
        -->
      </verbatim>
    </map>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_${prefix}_r_finger">
        <!--
        <controller:P3D name="p3d_${prefix}_r_finger_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_r_finger</bodyName>
          <topicName>${prefix}_r_finger_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${prefix}_r_finger_position_iface" />
        </controller:P3D>
        -->
      </verbatim>
    </map>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_${prefix}_r_finger_tip">
        <!--
        <controller:P3D name="p3d_${prefix}_r_finger_tip_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_r_finger_tip</bodyName>
          <topicName>${prefix}_r_finger_tip_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${prefix}_r_finger_tip_position_iface" />
        </controller:P3D>
        <controller:F3D name="f3d_${prefix}_r_finger_tip_controller" plugin="libF3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${prefix}_r_finger_tip</bodyName>
          <topicName>${prefix}_r_finger_tip_force_ground_truth</topicName>
          <frameName>map</frameName>
          <interface:position name="f3d_${prefix}_r_finger_tip_position_iface" />
        </controller:P3D>
        -->
      </verbatim>
    </map>

  </macro>



  <macro name="pr2_gripper" params="side parent">
    <joint name="${side}_gripper_palm_joint" type="fixed" />
    <link name="${side}_gripper_palm">
      <parent name="${parent}" />
      <joint name="${side}_gripper_palm_joint" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertial>
        <mass value="1.0" />
        <com xyz="0.179474 -0.000058  0.013779" />
        <inertia  ixx="1.0" ixy="-0.000003671102" ixz="0.000029379389"
                  iyy="1.0" iyz="-0.000427679042" izz="1.0" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Red</elem>
        </map>
        <geometry name="pr2_gripper_roll_mesh_file">
          <mesh filename="wr_roll" />
        </geometry>
      </visual>

      <collision>
        <origin xyz="0.05 0 0" rpy="0 0 0" />
        <geometry name="pr2_gripper_roll_collision_geom">
          <box size="0.11 0.10 0.05" />
        </geometry>
        <verbose value="Yes" />
      </collision>

      <map name="pr2_gripper_roll_left_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_gripper_palm">
        <!--
        <controller:P3D name="p3d_${side}_gripper_palm_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${side}_gripper_palm</bodyName>
          <topicName>${side}_gripper_palm_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${side}_gripper_palm_position_iface" />
        </controller:P3D>
        -->
      </verbatim>
    </map>


    <pr2_finger prefix="${side}_gripper" parent="${side}_gripper_palm" />

    <!--transmission type="GripperTransmission" name="${side}_gripper_trans">
      <actuator name="${side}_gripper_motor" />
      <joint name="${side}_gripper_r_finger_joint" reduction="-1000.0" />
      <joint name="${side}_gripper_r_finger_tip_joint" reduction="1000.0" />
      <joint name="${side}_gripper_l_finger_joint" reduction="1000.0" />
      <joint name="${side}_gripper_l_finger_tip_joint" reduction="-1000.0" />
      <pid p="0.01" i="0.001" d="0.005" iClamp="0.005" />
    </transmission-->
    <transmission type="SimpleTransmission" name="${side}_gripper_trans">
      <actuator name="${side}_gripper_motor" />
      <joint name="${side}_gripper_l_finger_joint" />
      <mechanicalReduction>6.0</mechanicalReduction>
    </transmission>

  </macro>



  <macro name="pr2_upper_arm" params="side parent reflect *origin">

    <!-- Shoulder pan -->

    <joint name="${side}_shoulder_pan_joint" type="revolute">
      <axis xyz="0 0 1" />

      <limit min="${reflect*M_PI/4-1.5}" max="${reflect*M_PI/4+1.5}"
             effort="30" velocity="${VELOCITY_LIMIT_SCALE*3.48}"
             k_position="100" k_velocity="10"
             safety_length_min="0.15" safety_length_max="0.15" />
      <calibration reference_position="${reflect*M_PI/4}" values="1.5 -1" />

      <joint_properties damping="10.0" />
    </joint>

    <link name="${side}_shoulder_pan">
      <parent name="${parent}" />
      <insert_block name="origin" />
      <joint name="${side}_shoulder_pan_joint" />
      <inertial>
        <mass value="16.29553" />
        <com xyz="-0.005215 -0.030552 0.0" />
        <inertia ixx="0.793291393007"  ixy="0.003412032973"  ixz="0.0096614481"
                 iyy="0.818419457224"  iyz="-0.033999499551" izz="0.13915007406" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Blue</elem>
        </map>
        <geometry name="pr2_sholder_pan_mesh_file">
          <mesh filename="shoulder_yaw" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.05 0 -0.2" rpy="0 0 0 " />
        <geometry name="pr2_shoulder_pan_collision_box_geom">
          <box size="0.347 0.254 0.646" />
        </geometry>
      </collision>
      <map name="pr2_shoulder_pan_${side}_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <transmission type="SimpleTransmission" name="${side}_shoulder_pan_trans">
      <actuator name="${side}_shoulder_pan_motor" />
      <joint name="${side}_shoulder_pan_joint" />
      <mechanicalReduction>63.16</mechanicalReduction>
    </transmission>

    <!-- Shoulder pitch -->

    <joint name="${side}_shoulder_pitch_joint" type="revolute">
      <axis xyz="0 1 0" />
      <anchor xyz="0 0 0" />

      <limit min="-0.4" max="1.5" effort="30" velocity="${VELOCITY_LIMIT_SCALE*3.47}"
             k_position="100" k_velocity="10"
             safety_length_min="0.1" safety_length_max="0.1" />
      <calibration reference_position="0" values="1.5 -1 " />

      <joint_properties damping="100.0" />
    </joint>

    <link name="${side}_shoulder_pitch">
      <parent name="${side}_shoulder_pan" />
      <origin xyz="0.1 0 0" rpy="0 0 0" />
      <joint name="${side}_shoulder_pitch_joint" />
      <inertial>
        <mass value="2.41223" />
        <com xyz="-0.035895  0.014422 -0.0028263" />
        <inertia ixx="0.016640333585" ixy="0.002696462583"  ixz="0.001337742275"
                 iyy="0.017232603914" iyz="-0.003605106514" izz="0.018723553425" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Grey</elem>
        </map>
        <geometry name="pr2_sholder_pitch_mesh_file">
          <mesh filename="shoulder_pitch" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0 " rpy="${M_PI/2} 0 0" />
        <geometry name="pr2_shoulder_pitch_collision_geom">
          <cylinder radius="${shoulder_pitch_radius}" length="${shoulder_pitch_length}" />
        </geometry>
      </collision>
      <map name="pr2_shoulder_pitch_${side}_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <transmission type="SimpleTransmission" name="${side}_shoulder_pitch_trans">
      <actuator name="${side}_shoulder_pitch_motor" />
      <joint name="${side}_shoulder_pitch_joint" />
      <mechanicalReduction>57.36</mechanicalReduction>
    </transmission>

    <!-- Upperarm roll -->

    <joint name="${side}_upper_arm_roll_joint" type="revolute">
      <axis xyz="1 0 0" />
      <anchor xyz="0 0 0" />

      <limit min="-3.9" max="0.8" effort="30" velocity="${VELOCITY_LIMIT_SCALE*5.45}"
             k_position="100" k_velocity="2"
             safety_length_min="0.15" safety_length_max="0.15" />
      <calibration reference_position="${-M_PI/2}" values="1.5 -1 " />

      <joint_properties damping="1.0" />
    </joint>

    <link name="${side}_upper_arm_roll">
      <parent name="${side}_shoulder_pitch" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <joint name="${side}_upper_arm_roll_joint" />

      <inertial>
        <mass value="4.9481" />
        <com xyz=" 0.21227 0.001205 -0.016293  " />
        <inertia  ixx="10.0" ixy="0.000547745916"  ixz="0.000119476885"
                  iyy="1.0"  iyz="0.001544932307"  izz="1.0" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Green</elem>
        </map>
        <geometry name="pr2_shoulder_roll_mesh_file">
          <mesh filename="upperarm_roll" />
        </geometry>
      </visual>

      <collision>
        <origin xyz="0.3 0 0" rpy="0 0 0" />
        <geometry name="pr2_upper_arm_roll_collision_geom">
          <box size="0.362 0.144 0.157" />
        </geometry>
      </collision>

      <map name="pr2_upper_arm_roll_${side}_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <transmission type="SimpleTransmission" name="${side}_upper_arm_roll_trans">
      <actuator name="${side}_upper_arm_roll_motor" />
      <joint name="${side}_upper_arm_roll_joint" />
      <mechanicalReduction>32.65</mechanicalReduction>
    </transmission>

    <!-- Elbow flex -->

    <joint name="${side}_elbow_flex_joint" type="revolute">
      <axis xyz="0 -1 0" />
      <anchor xyz="0 0 0" />

      <limit min="-0.1" max="2.3" effort="30" velocity="${VELOCITY_LIMIT_SCALE*5.5}"
             k_position="100" k_velocity="3"
             safety_length_min="0.1" safety_length_max="0.4" />
      <calibration reference_position="1.1" values="1.5 -1" />

      <joint_properties damping="10.0" />
    </joint>

    <link name="${side}_elbow_flex">
      <parent name="${side}_upper_arm_roll" />
      <origin xyz="0.4 0 0" rpy="0 0 0" />
      <joint name="${side}_elbow_flex_joint" />

      <inertial>
        <mass value="1.689246" />
        <com xyz="-0.011638  0.013173 0.001228 " />
        <inertia  ixx="10.0" ixy="0.000292046674"  ixz="-0.000077359282"
                  iyy="1.0"  iyz="-0.000001162155" izz="1.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <map name="gazebo_material" flag="gazebo">
          <elem key="material">Gazebo/Grey</elem>
        </map>
        <geometry name="pr2_elbow_flex_mesh_file">
          <mesh filename="elbow_pitch" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry name="elbow_flex_collision_geom">
          <cylinder radius="0.1" length="0.08" />
        </geometry>
      </collision>
      <map name="pr2_elbow_flex_${side}_gravity" flag="gazebo">
        <elem key="turnGravityOff">true</elem>
      </map>
    </link>

    <transmission type="SimpleTransmission" name="${side}_elbow_flex_trans">
      <actuator name="${side}_elbow_flex_motor" />
      <joint name="${side}_elbow_flex_joint" />
      <mechanicalReduction>36.17</mechanicalReduction>
    </transmission>

    <map name="sensor" flag="gazebo">
      <verbatim key="p3d_${side}_upper_arm">
        <!--
        <controller:P3D name="p3d_${side}_shoulder_pan_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${side}_shoulder_pan</bodyName>
          <topicName>${side}_shoulder_pan_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${side}_shoulder_pan_position_iface" />
        </controller:P3D>
        <controller:P3D name="p3d_${side}_shoulder_pitch_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${side}_shoulder_pitch</bodyName>
          <topicName>${side}_shoulder_pitch_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${side}_shoulder_pitch_position_iface" />
        </controller:P3D>
        <controller:P3D name="p3d_${side}_upper_arm_roll_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
          <bodyName>${side}_upper_arm_roll</bodyName>
          <topicName>${side}_upper_arm_roll_pose_ground_truth</topicName>
          <gaussianNoise>0.0</gaussianNoise>
          <frameName>map</frameName>
          <interface:position name="p3d_${side}_upper_arm_roll_position_iface" />
        </controller:P3D>
        <controller:P3D name="p3d_${side}_elbow_flex_controller" plugin="libP3D.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>1000.0</updateRate>
