<robot name="head_pan_tilt">

  <include filename="$(find wg_robot_description)/pr2_robot_defs/head_defs.xml" />
  <include filename="$(find wg_robot_description)/pr2_robot_defs/body_defs.xml" />

  <pr2_torso name="torso" parent="world">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </pr2_torso>

  <pr2_head_pan name="head_pan" parent="torso">
    <origin xyz="0 0 0.3815" rpy="0 0 0" />
  </pr2_head_pan>

  <pr2_head_tilt name="head_tilt" parent="head_pan">
    <origin xyz="0.058 0 0" rpy="0 0 0" />
  </pr2_head_tilt>

</robot>
