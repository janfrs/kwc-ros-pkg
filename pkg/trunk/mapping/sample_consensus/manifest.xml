<package>
  <description>
    A library for SAmple Consensus (SAC) like methods: RANSAC, MSAC, MLESAC, etc, and geometric shape models.
  </description>

  <author>Radu Bogdan Rusu (rusu@cs.tum.edu)</author>
  <license>BSD</license>
  <url>http://pr.willowgarage.com</url>
  <review status="unreviewed" notes="beta"/>

  <depend package="roscpp" />
  <depend package="std_msgs" />
  <depend package="cloud_geometry" />

  <sysdepend os="ubuntu" version="8.04-hardy" package="lapack3-dev"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lsample_consensus"/>
  </export>
</package>
