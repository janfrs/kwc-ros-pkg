
<?xml version="1.0"?>

<robot name="pr2">

<!--
    
    Actuators need to be putside of joints. Joints will no longer know about actuators.
    Instead, there will be the transmission tags that can be used to link the actuators to the links.

  -->

<joint name="joint_shoulder_pan_left">

  <actuator name="actuator_shoulder_pan_left_1">
    <motor>MAXON</motor>
    <ip> IP_ADDRESS </ip> 
    <port> 0 </port>
    <reduction>10</reduction>
    <polymap>-1 -0.2 -0.5 </polymap>
  </actuator> 
  
  <actuator name="actuator_shoulder_pan_left_2">
    <motor>MAXON</motor>
    <ip> IP_ADDRESS </ip> 
    <port> 0 </port>
    <reduction>10</reduction>
    <polymap>1 0.2 0.5 </polymap>
  </actuator>     
</joint>


<!-- a transmission tag only contains <data> tags -->
  <transmission name="some name">
    <data type="" name=""> <!-- type and name attributes need not be specified (assumed empty strings). If empty strings, the key-value pairs are the 'default' ones -->
      <!--  <key>value</key>  -->
      <joint>joint_shoulder_pan_left</joint>
      <actuator>actuator_shoulder_pan_left_1</actuator>
    </data>
  </transmission>
    
  <actuator name="one more">
    <motor>MAXON</motor>
    <ip> IP_ADDRESS </ip> 
    <port> 0 </port>
    <reduction>10</reduction>
    <lookup> gripper_lookup </lookup>
  </actuator> 

  
  
  
